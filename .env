# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_sales_saas
REDIS_URL=redis://localhost:6379/0

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# Email Services
SENDGRID_API_KEY=your_sendgrid_api_key
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Security
JWT_SECRET_KEY=$(openssl rand -base64 32)
ENCRYPTION_KEY=$(openssl rand -base64 32)

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# File Storage (local media path)
MEDIA_PATH=/app/media
S3_BUCKET_NAME=ai-sales-storage
BACKUP_S3_BUCKET=ai-sales-backups

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO


CODEGEN_TIMEOUT_MS=240000
PROXY_TIMEOUT_MS=240000
