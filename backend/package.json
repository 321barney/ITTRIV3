{
  "name": "ittri-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "//": "–––– DEV WORKFLOWS ––––",
    "dev": "run-p dev:api dev:ingest",
    "dev:api": "RUN_WORKERS=true tsx watch src/api/server.ts",
    "dev:ingest": "tsx watch src/worker/ingest/index.ts",
    "//2": "all-in-one launcher via main.ts (choose MODE=all|api|worker)",
    "dev:all": "MODE=all tsx watch src/main.ts",
    "dev:worker": "MODE=worker tsx src/main.ts",
    "dev:api-only": "MODE=api tsx watch src/main.ts",
    "//3": "–––– BUILD & RUN ––––",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "start": "node dist/main.js",
    "//4": "–––– DB / KNEX ––––",
    "db:migrate": "node -e \"console.log('Migrations run on boot via code; keep this if you add knex CLI.')\"",
    "db:reset": "node -e \"console.log('Implement if you need a reset script.')\"",
    "//5": "–––– gRPC (v1 + v2) ––––",
    "dev:grpc": "tsx watch src/grpc-server/index.ts",
    "grpc:start": "node dist/grpc-server/index.js"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.1.0",
    "bullmq": "^5.8.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0",
    "grpc-health-check": "^2.1.0",
    "ioredis": "^5.3.2",
    "jose": "^6.1.0",
    "knex": "^2.5.1",
    "openai": "^4.55.0",
    "papaparse": "^5.5.3",
    "pg": "^8.11.3",
    "tsx": "^4.20.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.8.0",
    "@types/node": "^20.14.2",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  }
}
